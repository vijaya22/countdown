{
  "manifest_version": 3,
  "name": "Every Second Counts",
  "version": "1.0.0",
  "description": "Replaces new tab with a live countdown to a target date/time.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["storage"]
}
  