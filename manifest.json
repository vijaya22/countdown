{
  "manifest_version": 3,
  "name": "Every Second Counts",
  "version": "2.0.3",
  "description": "Replaces new tab with a live countdown to a target date/time.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://countdown.everysecondcounts.workers.dev/*"],
      "js": ["content.js"]
    }
  ]
}
  
